<div class="mt-4">
    <h3>Cập nhập khóa học </h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
        </div>

        <div class="form-group">
            <label for="image">Hinh anh</label>
            <input type="text" class="form-control" id="image" name="image" value="{{course.image}}">
        </div>

        <div class="form-group">
            <label for="videoId">VideoId</label>
            <input type="text" class="form-control" id="videoId" name="videoId" value="{{course.videoId}}">
        </div>
       
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>